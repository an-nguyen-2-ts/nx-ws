{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/dop-e2e/src",
  "projectType": "application",
  "tags": ["scope:client-e2e"],
  "implicitDependencies": ["dop"],
  "targets": {
    "e2e": {
      "executor": "@nrwl/cypress:cypress",
      "options": {
        "cypressConfig": "apps/dop-e2e/cypress.json",
        "devServerTarget": "dop:serve:development"
      },
      "configurations": {
        "production": {
          "devServerTarget": "dop:serve:production"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/dop-e2e/**/*.js"]
      }
    }
  }
}
